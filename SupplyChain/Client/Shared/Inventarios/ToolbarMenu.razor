@using Syncfusion.Blazor.Navigations
@using Syncfusion.Blazor.Buttons
@inherits ToolbarMenuBase
<SfToolbar>
    <ToolbarItems>
        <ToolbarItem Text="Eliminar" Id="btnEliminarToolbar" Type="ItemType.Button">
            <Template>
                <SfButton Content="Eliminar" Disabled="@(DisabledEliminar)"
                          CssClass="btn btn-info" IconCss="fa fa-trash-o" OnClick="@(async () => await Eliminar())" />
            </Template>
        </ToolbarItem>

        <ToolbarItem Text="Nuevo" Id="btnNuevoToolbar" Type="ItemType.Button">
            <Template>
                <SfButton Content="Nuevo"
                          CssClass="btn btn-info" IconCss="fa fa-plus-square-o" OnClick="@(async () => await Nuevo())" />
            </Template>
        </ToolbarItem>

        <ToolbarItem Type="ItemType.Separator"></ToolbarItem>

        <ToolbarItem Id="btnGuardarToolbar" Type="ItemType.Button">
            <Template>
                <SfButton HtmlAttributes="@HtmlAttribute" Content="Guardar" Disabled="@(DisabledGuardar)"
                          CssClass="btn btn-info" IconCss="fa fa-save" />
            </Template>
        </ToolbarItem>

        <ToolbarItem Text="Imprimir" Id="btnImprimirToolbar" Type="ItemType.Button">
            <Template>
                <SfButton Content="Imprimir" Disabled="@(DisabledImprimir)" OnClick="@(async () => await Imprimir())"
                          CssClass="btn btn-info" IconCss="fa fa-print" />
            </Template>
        </ToolbarItem>

    </ToolbarItems>

</SfToolbar>
<style>
    .btn-info.disabled, .btn-info:disabled {
        background: #398bf7;
    }

    .e-toolbar .e-tbar-btn .e-icons {
        background: #398bf7;
        color: #fafafa;
    }

    .e-toolbar .e-tbar-btn:focus {
        background: #398bf7;
        border-radius: 0.2rem;
    }

    .e-toolbar .e-tbar-btn:active {
        background: #398bf7;
        border-radius: 0.2rem;
    }

    .e-toolbar .e-toolbar-items .e-toolbar-item .e-tbar-btn-text {
        color: #fafafa;
        font-size: 12px;
    }

    .e-toolbar .e-tbar-btn:hover {
        background: #398bf7;
        border: 1px solid #398bf7;
        color: #fafafa;
        border-radius: 0.2rem;
        cursor: pointer;
        box-shadow: 0 14px 26px -12px rgba(23, 105, 255, 0.42), 0 4px 23px 0 rgba(0, 0, 0, 0.12), 0 8px 10px -5px rgba(23, 105, 255, 0.2);
    }

    .e-toolbar .e-tbar-btn {
        color: #fff;
        background: #398bf7;
        border: 1px solid #398bf7;
        border-radius: 0.2rem;
    }
</style>