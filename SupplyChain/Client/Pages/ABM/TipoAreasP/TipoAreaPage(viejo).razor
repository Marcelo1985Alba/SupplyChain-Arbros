@page "/Abms/tipoArea2"
@inject IJSRuntime JsRuntime
@inject HttpClient Http

@inject NavigationManager NavManager
@inherits SupplyChain.TipoAreaPageBase

<div class="col-lg-12 control-section">
    <div class="content-wrapper">
        <div class="row">
            <SfGrid AllowReordering="true" ShowColumnChooser="true" ShowColumnMenu="true" AllowResizing="true"
                    @ref="Grid" DataSource="@tipoareas" ID="tipoareaGrid"
                    AllowExcelExport="true" AllowRowDragAndDrop="true" AllowGrouping="true"
                    AllowSorting="true" AllowPaging="true" AllowFiltering="true" Toolbar="@Toolbaritems">
                <GridSelectionSettings Type="SelectionType.Multiple"></GridSelectionSettings>
                <GridEvents OnToolbarClick="@ClickHandler" OnActionBegin="ActionBegin" TValue="TipoArea"></GridEvents>
                <GridFilterSettings Type="@FilterType.CheckBox"></GridFilterSettings>
                <GridGroupSettings ShowGroupedColumn="true"></GridGroupSettings>
                <GridEditSettings AllowAdding="true" AllowEditing="true" AllowDeleting="true" Mode="@EditMode.Dialog">
                    <Template>
                        @{
                            var tiparea = context as TipoArea;
                            <div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label class="e-float-text e-label-top">Id:</label>
                                        <SfNumericTextBox ID="CG_TIPOAREA" @bind-Value="@(tiparea.Id)" Enabled="@Disabled"></SfNumericTextBox>
                                    </div>

                                    <div class="form-group col-md-6">
                                        <label class="e-float-text e-label-top">Nombre:</label>
                                        <SfTextBox CssClass="customClass" ID="DES_TIPOAREA" @bind-Value="@(tiparea.DES_TIPOAREA)"></SfTextBox>
                                    </div>
                                </div>
                            </div>
                        }
                    </Template>
                </GridEditSettings>
                <GridColumns>
                    <GridColumn Field="@nameof(TipoArea.Id)" HeaderText="Id" TextAlign="TextAlign.Left" IsPrimaryKey="true"></GridColumn>
                    <GridColumn Field="@nameof(TipoArea.DES_TIPOAREA)" HeaderText="Tipo" TextAlign="TextAlign.Left"></GridColumn>


                </GridColumns>
            </SfGrid>
        </div>
    </div>
</div>
<style>
        .form-group.col-md-6 {
            width: 200px;
        }

        label.e-float-text {
            position: relative;
            padding-left: 0;
            top: 10%;
        }

        .e-input-group.e-control-wrapper.customClass {
            color: black;
            background-color: lightblue;
        }
    </style>

