			<HeatMapPalette Value="I1F4" Color="#c5f1d1"></HeatMapPalette>
			<HeatMapPalette Value="I1F5" Color="#fec001"></HeatMapPalette>

			<HeatMapPalette Value="I2F1" Color="#c5f1d1"></HeatMapPalette>
