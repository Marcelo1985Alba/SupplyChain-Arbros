@using Syncfusion.Blazor.DropDowns
@inherits FormProcunBase

<SfToast ID="toast_default" @ref="ToastObj">
    <ToastPosition X="Center" Y="Top"></ToastPosition>
</SfToast>

<SfDialog @bind-Visible="Show" IsModal="true" Width="70%" Height="680px" ShowCloseIcon="true">
    <DialogEvents Closed="OnCerrarDialog"></DialogEvents>
    <DialogTemplates>
        <Header>
            @if (string.IsNullOrEmpty(procuns.Id.ToString()))
            {
                <p>Nuevo procun</p>
            }
            else
            {
                <p>&nbsp;&nbsp;@procuns.Id&nbsp</p>
            }
        </Header>
        <Content>
            <EditForm Model="procuns" OnValidSubmit="@GuardarProc">
                <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-DatosGenerales" role="tab" aria-controls="pills-home" aria-selected="true">Datos Generales</a>
                    </li>
                </ul>
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-DatosGenerales" role="tabpanel" aria-labelledby="pills-home-tab">
                        <div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Registro:</label>
                                    <SfNumericTextBox ID="Registro" @bind-Value="@(procuns.Id)" Enabled="@procuns.ESNUEVO" Placeholder="Registro"></SfNumericTextBox>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Orden:</label>
                                    <SfNumericTextBox ID="Orden" @bind-Value="@(procuns.ORDEN)" Placeholder="Orden"></SfNumericTextBox>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <a href="/Abms/productos" target="_blank">Producto:</a>
                                    <SfComboBox TValue="string" CssClass="customClass" TItem="Producto" PopupWidth="auto" AllowFiltering="true"
                                                @bind-Value="@(procuns.CG_PROD)" DataSource="@productos">
                                        <ComboBoxFieldSettings Value="Id" Text="CG_PROD"></ComboBoxFieldSettings>
                                    </SfComboBox>
                                </div>
                                <div class="form-group col-md-6">
                                    <a href="/Abms/areas" target="_blank">Area:</a>
                                    <SfComboBox TValue="int" CssClass="customClass" TItem="Areas" PopupWidth="auto" AllowFiltering="true"
                                                @bind-Value="@(procuns.CG_AREA)" DataSource="@areas">
                                        <ComboBoxFieldSettings Value="Id" Text="CG_AREA"></ComboBoxFieldSettings>
                                    </SfComboBox>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <a href="/Abms/lineas" target="_blank">Linea:</a>
                                    <SfComboBox TValue="int" CssClass="customClass" TItem="Lineas" PopupWidth="auto" AllowFiltering="true"
                                                @bind-Value="@(procuns.CG_LINEA)" DataSource="@lineas">
                                        <ComboBoxFieldSettings Value="Id" Text="CG_LINEA"></ComboBoxFieldSettings>
                                    </SfComboBox>
                                </div>
                                <div class="form-group col-md-6">
                                    <a href="/Abms/celdas" target="_blank">Celda:</a>
                                    <SfComboBox TValue="string" CssClass="customClass" TItem="Celdas" PopupWidth="auto" AllowFiltering="true"
                                                @bind-Value="@(procuns.CG_CELDA)" DataSource="@celdas">
                                        <ComboBoxFieldSettings Value="Id" Text="CG_CELDA"></ComboBoxFieldSettings>
                                    </SfComboBox>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Proceso:</label>
                                    <SfTextBox ID="Proceso" @bind-Value="@(procuns.PROCESO)" Placeholder="Proceso"></SfTextBox>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Tiempo:</label>
                                    <SfNumericTextBox ID="Tiempo" @bind-Value="@(procuns.TIEMPO1)" Placeholder="Tiempo"></SfNumericTextBox>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>TS1:</label>
                                    <SfNumericTextBox ID="TS1" @bind-Value="@(procuns.TS1)" Placeholder="TS1"></SfNumericTextBox>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Proporcion:</label>
                                    <SfTextBox ID="Proporcion" @bind-Value="@(procuns.PROPORC)" Placeholder="Proporcion"></SfTextBox>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <button id="sendButton" type="submit" class="e-control e-btn e-primary" data-ripple="true">Guardar</button>
            </EditForm>
        </Content>
    </DialogTemplates>
</SfDialog>