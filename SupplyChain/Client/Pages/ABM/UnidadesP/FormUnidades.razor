@inherits FormUnidadesBase

<SfToast ID="toast_default" @ref="ToastObj">
    <ToastPosition X="Center" Y="Top"></ToastPosition>
</SfToast>

<SfDialog @bind-Visible="Show" IsModal="true" Width="70%" Height="680px" ShowCloseIcon="true">
    <DialogEvents Closed="OnCerrarDialog"></DialogEvents>
    <DialogTemplates>
        <Header>
            @if (string.IsNullOrEmpty(unidades.Id))
            {
                <p>Nueva Unidad</p>
            }
            else
            {
                <p>&nbsp;&nbsp;@unidades.Id&nbsp;&nbsp;-&nbsp;&nbsp;@unidades.DES_UNID</p>
            }
        </Header>
        <Content>
            <EditForm Model="unidades" OnValidSubmit="@GuardarUnidad">
                <DataAnnotationsValidator/>
                <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-DatosGenerales" role="tab" aria-controls="pills-home" aria-selected="true">Datos Generales</a>
                    </li>
                </ul>
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-DatosGenerales" role="tabpanel" aria-labelledby="pills-home-tab">
                        <div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label class="e-float-text e-label-top">Unidad:</label>
                                    <SfTextBox ID="UNID" @bind-Value="@(unidades.Id)" Enabled="@unidades.ESNUEVO"></SfTextBox>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="e-float-text e-label-top">Descripcion:</label>
                                    <SfTextBox ID="Descripcion" @bind-Value="@(unidades.DES_UNID)"></SfTextBox>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label class="e-float-text e-label-top">Tipo:</label>
                                    <SfTextBox ID="TIPOUNID" @bind-Value="@(unidades.TIPOUNID)"></SfTextBox>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="e-float-text e-label-top">CG_DENBASICA:</label>
                                    <SfNumericTextBox ID="CG_DENBASICA" @bind-Value="@(unidades.CG_DENBASICA)"></SfNumericTextBox>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label class="e-float-text e-label-top">CODIGO:</label>
                                    <SfNumericTextBox ID="CODIGO" @bind-Value="@(unidades.CODIGO)"></SfNumericTextBox>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <button id="sendButton" type="submit" class="e-control e-btn e-primary" data-ripple="true">Guardar</button>
            </EditForm>
        </Content>
    </DialogTemplates>
</SfDialog>