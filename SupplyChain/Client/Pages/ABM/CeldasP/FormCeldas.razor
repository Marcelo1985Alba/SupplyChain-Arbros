@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Calendars
@using Syncfusion.Blazor.DropDowns
@inherits FormCeldasBase

<SfToast ID="toast_default" @ref="ToastObj">
    <ToastPosition X="Center" Y="Top"></ToastPosition>
</SfToast>

<SfDialog @bind-Visible="Show" IsModal="true" Width="70%" Height="680px" ShowCloseIcon="true">
    <DialogEvents Closed="OnCerrarDialog"></DialogEvents>
    <DialogTemplates>
        <Header>
            @if (string.IsNullOrEmpty(celdas.Id))
            {
                <p>Nueva celda</p>
            }
            else
            {
                <p>&nbsp;&nbsp;@celdas.Id&nbsp;&nbsp;-&nbsp;&nbsp;@celdas.DES_CELDA</p>
            }
        </Header>
        <Content>
            <EditForm Model="celdas" OnValidSubmit="@GuardarCelda">
                <DataAnnotationsValidator />
                <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-DatosGenerales" role="tab" aria-controls="pills-home" aria-selected="true">Datos Generales</a>
                    </li>
                </ul>
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-DatosGenerales" role="tabpanel" aria-labelledby="pills-home-tab">
                        <div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Codigo:</label>
                                    <SfTextBox ID="Codigo" @bind-Value="@(celdas.Id)" Enabled="@celdas.ESNUEVO" Placeholder="Codigo"></SfTextBox>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Descripcion:</label>
                                    <SfTextBox ID="Descripcion" @bind-Value="@(celdas.DES_CELDA)" Placeholder="Descripcion"></SfTextBox>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Area:</label>
                                    <SfNumericTextBox ID="Area" @bind-Value="@(celdas.CG_AREA)" Placeholder="Area"></SfNumericTextBox>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Coeficiente:</label>
                                    <SfNumericTextBox ID="Coeficiente" @bind-Value="@(celdas.COEFI)" Placeholder="Coeficiente"></SfNumericTextBox>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label>Codigo Proveedor:</label>
                                    <SfNumericTextBox ID="Codigo Proveedor" @bind-Value="@(celdas.CG_PROVE)" Placeholder="Codigo Proveedor"></SfNumericTextBox>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <button id="sendButton" type="submit" class="e-control e-btn e-primary" data-ripple="true">Guardar</button>
            </EditForm>
        </Content>
    </DialogTemplates>
</SfDialog>