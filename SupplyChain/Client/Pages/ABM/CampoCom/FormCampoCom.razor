@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Calendars
@using Syncfusion.Blazor.DropDowns

@inherits FormCampoComBase

<SfToast ID="toast_default" @ref="ToastObj">
    <ToastPosition X="Center" Y="Top"></ToastPosition>
</SfToast>

<SfDialog @bind-Visible="Show" IsModal="true" Width="70%" Height="680px" ShowCloseIcon="true">
    <DialogEvents Closed="OnCerrarDialog"></DialogEvents>
    <DialogTemplates>
      @*   <Header>
            @if (int.(campos.Id))
            {
                <p>Nuevo Comodin</p>
            }

        </Header> *@
       <Content>
            <EditForm Model="campos" OnValidSubmit="@GuardarCampo">
               <DataAnnotationsValidator />
                <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-DatosGenerales" role="tab" aria-controls="pills-home" aria-selected="true">Datos Generales</a>
                    </li>
                </ul>
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-DatosGenerales" role="tabpanel" aria-labelledby="pills-home-tab">
                        <div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Codigo:</label>
                                    <SfNumericTextBox ID="Id" @bind-Value="@(campos.Id)" Enabled="@campos.ESNUEVO"></SfNumericTextBox>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Tabla:</label>
                                    <SfTextBox ID="Tabla" @bind-Value="@(campos.Tabla)"  Placeholder="Tabla"></SfTextBox>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Presion:</label>
                                    <SfTextBox ID="Presion" @bind-Value="@(campos.Presion)" Placeholder="Presion"></SfTextBox>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Resorte:</label>
                                    <SfTextBox ID="Resorte" @bind-Value="@(campos.Resorte)" Placeholder="Resorte"></SfTextBox>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Ajuste Banco:</label>
                                    <SfTextBox ID="Ajuste_Banco" @bind-Value="@(campos.Ajuste_Banco)" Placeholder="Ajuste Banco"></SfTextBox>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Cotra Presion:</label>
                                    <SfTextBox ID="Contra_Presion" @bind-Value="@(campos.Ajuste_Banco)" Placeholder="Contra Presion"></SfTextBox>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Temperatura:</label>
                                    <SfTextBox ID="Temperatura" @bind-Value="@(campos.Temperatura)" Placeholder="Temperatura"></SfTextBox>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>CampoCom7:</label>
                                    <SfTextBox ID="CampoCom7" @bind-Value="@(campos.CampoCom7)" Placeholder="CampoCom7"></SfTextBox>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>CampoCom8:</label>
                                    <SfTextBox ID="CampoCom8" @bind-Value="@(campos.CampoCom8)" Placeholder="CampoCom8"></SfTextBox>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <button id="sendButton" type="submit" class="e-control e-btn e-primary" data-ripple="true">Guardar</button>
           </EditForm>
       </Content> 
       
    </DialogTemplates>
</SfDialog>